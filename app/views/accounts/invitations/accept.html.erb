<div class='row'>
  <div class='twist-content col-md-offset-4 col-md-4'>
    <h2>Accepting an invitation</h2>

    <p>
      You are accepting an invitation to join the <%= @invitation.account.name %> account.
    </p>

    <% if !user_signed_in? %>
      <%= render "anonymous_accept" %>
    <% else %>
      <%= render "user_accept" %>
    <% end %>
  </div>
</div>
